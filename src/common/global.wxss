.flex-base,
.flex-row,
.flex-column,
.flex-between,
.flex-row-center,
.flex-column-center {
  display: flex;
  align-items: center;
}
.flex-row,
.flex-row-center {
  flex-direction: row;
}
.flex-row-center {
  justify-content: center;
}
.flex-column,
.flex-column-center {
  flex-direction: column;
}
.flex-column-center {
  justify-content: center;
}
.flex-between {
  justify-content: space-between;
}
.flex-wrap {
  flex: 1;
}
.button-hover {
  opacity: 0.8;
}
/** 一行超出隐藏 */
.text-single {
  display: block;
  /*设置超过的隐藏*/
  overflow: hidden;
  /*设置不断行*/
  white-space: nowrap;
  /*这就是省略号喽*/
  text-overflow: ellipsis;
}
/** 最多显示两行 */
.text-twice {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /* autoprefixer: off */
  -webkit-box-orient: vertical;
  /* autoprefixer: on */
  -webkit-line-clamp: 2;
}
button:active {
  opacity: 0.8;
}
button {
  border: none;
  color: white;
}
/** 头像圆形图 */
.image-round {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  display: block;
  background-size: 100%;
  background-color: #ccc;
}
.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
}
